# Backend Environment Variables for Production

# Environment
NODE_ENV=production

# Azure Web App automatically provides PORT, but you can override
PORT=8080

# MongoDB Atlas Connection String
# Get this from your MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/university_system?retryWrites=true&w=majority&appName=UniversitySystem

# JWT Secrets - MUST be changed for production
# Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_a_strong_64_character_secret_key_here
JWT_REFRESH_SECRET=generate_another_strong_64_character_secret_key_here
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Session Secret - MUST be changed for production
SESSION_SECRET=generate_session_secret_key_here

# Email Configuration (Gmail App Password recommended)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password_16_characters
EMAIL_FROM=University System <noreply@yourdomain.com>

# Frontend URL - Your Vercel deployment URL
FRONTEND_URL=https://your-app.vercel.app
CORS_ORIGIN=https://your-app.vercel.app

# Optional: Redis for session storage (Azure Redis Cache)
# REDIS_URL=rediss://username:password@your-redis.redis.cache.windows.net:6380

# Optional: Monitoring and logging
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=info
