# Environment Variables for University Information System Backend

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB Connection String
# For local development
MONGODB_URI=mongodb://localhost:27017/university_information_system

# For MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/university_information_system?retryWrites=true&w=majority

# Database Name
DATABASE_NAME=university_information_system

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Environment
NODE_ENV=development

# Server Port
PORT=3001

# Application URL
APP_URL=http://localhost:3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Allowed Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# JWT Secret (Use a strong, random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration
JWT_EXPIRES_IN=7d

# Refresh Token Expiration
REFRESH_TOKEN_EXPIRES_IN=30d

# Password Hashing Rounds
BCRYPT_ROUNDS=12

# Session Secret
SESSION_SECRET=your-session-secret-key

# Cookie Settings
COOKIE_SECRET=your-cookie-secret-key
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================

# Upload Directory (local storage)
UPLOAD_PATH=./uploads

# Maximum file size (in bytes) - 50MB
MAX_FILE_SIZE=52428800

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif,mp4,mp3,zip,rar

# Maximum files per upload
MAX_FILES_PER_UPLOAD=10

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid Configuration (Alternative)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Email From Address
EMAIL_FROM=noreply@uis.edu.lk
EMAIL_FROM_NAME=University Information System

# Email Templates
EMAIL_VERIFY_TEMPLATE=email-verification
EMAIL_RESET_PASSWORD_TEMPLATE=reset-password
EMAIL_WELCOME_TEMPLATE=welcome

# ==============================================
# REDIS CONFIGURATION (Optional - for caching)
# ==============================================

# Redis URL
REDIS_URL=redis://localhost:6379

# Redis Password
REDIS_PASSWORD=

# Redis Database Number
REDIS_DB=0

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log Level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info

# Log Directory
LOG_DIR=./logs

# Maximum log file size
LOG_MAX_SIZE=20m

# Maximum number of log files
LOG_MAX_FILES=14

# ==============================================
# RATE LIMITING
# ==============================================

# Rate limit - requests per window
RATE_LIMIT_REQUESTS=100

# Rate limit window (in milliseconds) - 15 minutes
RATE_LIMIT_WINDOW=900000

# Auth rate limit - login attempts per window
AUTH_RATE_LIMIT_REQUESTS=5

# Auth rate limit window (in milliseconds) - 15 minutes
AUTH_RATE_LIMIT_WINDOW=900000

# ==============================================
# CLOUD STORAGE (AWS S3 - Optional)
# ==============================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# S3 Bucket Configuration
S3_BUCKET_NAME=uis-files
S3_BUCKET_REGION=us-east-1

# CloudFront Distribution (Optional)
CLOUDFRONT_URL=https://your-distribution.cloudfront.net

# ==============================================
# WEBSOCKET CONFIGURATION
# ==============================================

# WebSocket Port (if different from main app)
WEBSOCKET_PORT=3002

# WebSocket CORS Origins
WEBSOCKET_CORS_ORIGINS=http://localhost:3000

# ==============================================
# EXTERNAL SERVICES
# ==============================================

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# SMS Service (Twilio - Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Application Insights (Optional)
APPLICATION_INSIGHTS_KEY=your-app-insights-key

# Sentry (Error Tracking - Optional)
SENTRY_DSN=your-sentry-dsn

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID=your-ga-id

# ==============================================
# BACKUP CONFIGURATION
# ==============================================

# Backup Directory
BACKUP_DIR=./backups

# Backup Retention (in days)
BACKUP_RETENTION_DAYS=30

# Automatic Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================

# Test Database (for running tests)
TEST_DATABASE_NAME=uis_test

# Mock Email Service (for development)
MOCK_EMAIL_SERVICE=true

# Enable API Documentation
ENABLE_API_DOCS=true

# API Documentation Path
API_DOCS_PATH=/api-docs

# Enable Request Logging
ENABLE_REQUEST_LOGGING=true

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================

# These should be set in production environment

# NODE_ENV=production
# JWT_SECRET=your-production-jwt-secret-very-long-and-random
# MONGODB_URI=your-production-mongodb-uri
# REDIS_URL=your-production-redis-url
# SMTP_HOST=your-production-smtp-host
# SMTP_USER=your-production-email
# SMTP_PASS=your-production-email-password
# CORS_ORIGINS=https://yourdomain.com
# COOKIE_SECURE=true
# LOG_LEVEL=warn
# ENABLE_API_DOCS=false
