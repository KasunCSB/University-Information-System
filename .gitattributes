# Auto detect text files and perform LF normalization
* text=auto

# Windows batch files should have CRLF line endings
*.bat text eol=crlf
*.cmd text eol=crlf

# Shell scripts should have LF line endings
*.sh text eol=lf

# Web files should have LF line endings
*.css text eol=lf
*.html text eol=lf
*.js text eol=lf
*.json text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.config.js text eol=lf
*.config.ts text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Image files are binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Font files are binary
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Archive files are binary
*.zip binary
*.tar.gz binary
*.7z binary
